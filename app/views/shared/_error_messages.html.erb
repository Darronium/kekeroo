<% if @user != nil && @user.errors.any? %>
  <div id="error_explanation">
    <% if !mobile_device? %>
  	<div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <% end %>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
